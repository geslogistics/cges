<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Actions-->
        <record id="logistics_customs_order_act_window" model="ir.actions.act_window">
            <field name="name">Customs Orders</field>
            <field name="res_model">logistics.customs.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>


        <!--        Clearance Order Tree View-->
        <record id="logistics_customs_order_list_view" model="ir.ui.view">
            <field name="name">logistics.customs.order.list.view</field>
            <field name="model">logistics.customs.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="bl_awb_number"/>
                    <field name="stages"/>
                </tree>
            </field>
        </record>


        <!--        Clearance Order Form View-->
        <record id="logistics_customs_order_form_view" model="ir.ui.view">
            <field name="name">logistics.customs.order.form.view</field>
            <field name="model">logistics.customs.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stages" widget="statusbar" clickable="1"
                               statusbar_visible="draft,pre_bayan,custom_duty,final,cleared"/>
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group name="top">
                            <group string="Customer Details">
                                <field name="partner_id" widget="res_partner_many2one" placeholder="Customer..."
                                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                       options='{"always_reload": True,"no_quick_create": True, "no_create_edit": True}'/>
                                <field name="company_currency_id" invisible="1"/>
                                <field name="customer_ref"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="bill_types" widget="radio" options="{'horizontal': true}"/>
                                <field name="bl_awb_number"/>
                            </group>
                        </group>
                        <group>
                            <group string="Shipment Details">
                                <field name="shipment_type" required="1" widget="radio" options="{'horizontal': true}"/>
                                <field name="shipper_id" widget="res_partner_many2one" placeholder="Shipper..."
                                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                       options='{"always_reload": True,"no_quick_create": True, "no_create_edit": True}'/>
                                <field name="shipper_date"/>
                            </group>
                            <group string="Vessel Information">
                                <field name="vessel_name"/>
                                <field name="vessel_discharge_date"/>
                                <field name="vessel_expected_arrival_date"/>
                                <field name="vessel_arrival_date"/>
                            </group>
                        </group>
                        <group>
                            <group string="SADAD">
                                <field name="saddad_date"/>
                                <field name="sadad_no"/>
                                <field name="sadad_amount"/>
                                <field name="moved_sadad"/>
                            </group>
                            <group string="DO">
                                <field name="do_num"/>
                                <field name="do_date"/>
                                <field name="do_attach" filename="do_filename"/>
                            </group>
                        </group>
                        <group>
                            <group string="Bayan">
                                <field name="bayan_no"/>
                                <field name="pre_bayan_date"/>
                                <field name="bayan_attach" filename="bayan_filename"/>
                                <field name="fin_bayan_date"/>
                                <field name="final_attach" filename="fb_filename"/>
                            </group>
                            <group string="Demurrage and Detention Details">
                                <field name="demurrage"/>
                                <field name="free_time_days"/>
                                <field name="detention_date"/>
                            </group>
                        </group>
                        <group string="Other Informations">
                            <group>
                                <field name="eta"/>
                                <field name="inspection_date"/>
                                <field name="duty_paid_date"/>
                                <field name="gate_pass_date"/>
                                <field name="port_dues_payment_date"/>
                            </group>
                            <group>
                                <field name="etd"/>
                                <field name="des_Port"
                                       options='{"always_reload": True,"no_quick_create": True, "no_create_edit": True}'/>
                                <field name="lan_Port"
                                       options='{"always_reload": True,"no_quick_create": True, "no_create_edit": True}'/>
                                <field name="remarks" widget="text"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="logistics_customs_order_search_view" model="ir.ui.view">
            <field name="name">logistics.customs.order.search.view</field>
            <field name="model">logistics.customs.order</field>
            <field name="arch" type="xml">
                <search string="Customs">
                    <field name="name" string="Name"/>
                    <field name="partner_id" string="Customer" group="1" context="{'group_by': 'partner_id'}"/>
                    <field name="bl_awb_number" string="BL/AWB Number"/>
                    <field name="customer_ref" string="Customer Reference"/>
                    <field name="sadad_no" string="SADAD"/>
                    <field name="do_num"/>
                    <field name="sadad_no"/>
                    <field name="bayan_no"/>
                    <field name="shipper_id" string="Shipper"/>
                </search>
            </field>
        </record>

    </data>
</odoo>