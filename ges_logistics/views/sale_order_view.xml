<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_order_form_logistics" model="ir.ui.view">
            <field name="name">logistics.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_template_id']" position="after">
                        <button name="select_reference_document" type="object" icon="fa-search" string="" class="btn-primary"/>
                        <button name="initiate_reference_document" type="object" icon="fa-magic" string="" class="btn-primary"/>
                        <field name="reference_document" force_save="1" options="{'no_quick_create': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

       
    </data>
</odoo>