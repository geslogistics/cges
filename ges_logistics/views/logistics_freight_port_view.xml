<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Actions-->
        <record id="logistics_freight_port_act_window" model="ir.actions.act_window">
            <field name="name">Ports</field>
            <field name="res_model">logistics.freight.port</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Views -->
        <record id="logistics_freight_port_list_view" model="ir.ui.view">
            <field name="name">Logistics Freight Ports List</field>
            <field name="model">logistics.freight.port</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city_id"/>
                    <field name="zip_code"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="street3"/>
                </tree>
            </field>
        </record>

        <record id="logistics_freight_port_form_view" model="ir.ui.view">
            <field name="name">Logistics Freight Port Form</field>
            <field name="model">logistics.freight.port</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="air"/>
                            <field name="ocean"/>
                            <field name="road"/>
                            <field name="rail"/>
                            <field name="country_id"/>
                            <field name="state_id"/>
                            <field name="city_id"/>
                            <field name="zip_code"/>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="street3"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>