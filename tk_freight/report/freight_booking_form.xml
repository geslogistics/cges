                                <tr style="border-bottom:1px solid;">
                                    <td style="text-align:center;vertical-align:middle;width:50%;font-size:30px;">
                                        <strong>
                                            Booking Form
                                        </strong>
                                    </td>
                                    <td style="width:50%;border-left:1px solid;">
                                        <table style="width:100%;">
                                            <tr style="border-bottom:1px solid;">
                                                <td style="width:50%;border-right:1px solid;text-align:center">
                                                    TRACKING NO.
                                                </td>
                                                <td style="width:50%;text-align:center;">
                                                    <span t-field="o.tracking_number"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width:50%;border-right:1px solid;width:50%;text-align:center;">
